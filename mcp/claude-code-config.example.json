{
  "_comment": "Ejemplo de configuración de MCPs para Claude Code CLI (~/.claude.json)",
  "_note": "Este archivo es una referencia. La config real está en ~/.claude.json",
  
  "projects": {
    "/Users/YOUR_USER/Dev": {
      "mcpServers": {
        "ClickUp": {
          "command": "npx",
          "args": ["-y", "@taazkareem/clickup-mcp-server@latest"],
          "env": {
            "CLICKUP_MCP_LICENSE_KEY": "YOUR_LICENSE_KEY",
            "CLICKUP_API_KEY": "YOUR_API_KEY",
            "CLICKUP_TEAM_ID": "YOUR_TEAM_ID",
            "DOCUMENT_SUPPORT": "true"
          }
        },
        "granola-mcp": {
          "command": "python",
          "args": ["-m", "granola_mcp.mcp"],
          "env": {
            "GRANOLA_CACHE_PATH": "/Users/YOUR_USER/Library/Application Support/Granola/cache-v3.json"
          }
        },
        "github": {
          "url": "https://api.githubcopilot.com/mcp/",
          "headers": {
            "Authorization": "Bearer YOUR_GITHUB_COPILOT_TOKEN"
          }
        },
        "google-docs-mcp": {
          "command": "node",
          "args": ["/path/to/mcp-googledocs-server/dist/server.js"]
        },
        "slack": {
          "command": "/path/to/.nvm/versions/node/v20.x.x/bin/npx",
          "args": ["-y", "slack-mcp-server@latest", "--transport", "stdio"],
          "env": {
            "PATH": "/path/to/.nvm/versions/node/v20.x.x/bin:/usr/local/bin:/usr/bin:/bin",
            "SLACK_MCP_XOXC_TOKEN": "xoxc-YOUR_TOKEN",
            "SLACK_MCP_XOXD_TOKEN": "xoxd-YOUR_TOKEN",
            "SLACK_MCP_ADD_MESSAGE_TOOL": "true"
          }
        }
      }
    }
  }
}
